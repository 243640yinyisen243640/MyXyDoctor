<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_community_out_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="@string/community_setting_version_updata"
            android:textColor="@color/base_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_community_out_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/base_arrow_right"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:text="@string/app_name"
            android:textColor="@color/base_black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_community_out_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom|center_horizontal"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/community_setting_out_login" />


</LinearLayout>