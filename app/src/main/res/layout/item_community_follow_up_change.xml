<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape_bg_white_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fuc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/community_location"
        android:drawablePadding="5dp"
        android:text="@string/app_name"
        android:textColor="@color/base_text_gray"
        android:textSize="14sp" />
    <com.lyd.baselib.widget.view.MyListView
        android:id="@+id/lv_fuc_child"
        style="@style/listView" />


</LinearLayout>