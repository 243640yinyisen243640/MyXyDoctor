<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_community_data_abnormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <RadioButton
                style="@style/shelves_goods_rb_other"
                android:checked="true"
                android:text="@string/community_data_abnormal_suagar" />


            <RadioButton
                style="@style/shelves_goods_rb_other"
                android:text="@string/community_data_abnormal_pressure" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_data_abnormal_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_main_90_low"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="@color/main_red"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/data_abnormal_up" />

        <TextView
            android:id="@+id/tv_data_abnormal_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_bg_main_90_low"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/data_abnormal_filter_no_deal"
            android:textColor="@color/main_red" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_data_abnormal_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/base_down_black"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/base_filter" />

    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_community_data_abnormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>