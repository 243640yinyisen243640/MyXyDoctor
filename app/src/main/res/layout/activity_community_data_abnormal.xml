<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_community_data_abnormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <RadioButton
                style="@style/shelves_goods_rb_other"
                android:checked="true"
                android:text="@string/community_data_abnormal_suagar" />


            <RadioButton
                style="@style/shelves_goods_rb_other"
                android:text="@string/community_data_abnormal_pressure" />

        </RadioGroup>


    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_community_data_abnormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</LinearLayout>