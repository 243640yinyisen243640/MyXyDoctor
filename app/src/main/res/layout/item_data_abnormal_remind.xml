<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_data_abnormal_remind_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_data_abnormal_remind_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/data_gray_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_data_abnormal_remind_amonut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/community_content_black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_data_abnormal_remind_high_or_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/data_gray_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_data_abnormal_remind_eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:text="@string/app_name"
            android:textColor="#4A4A4A"
            android:textSize="13sp" />
    </LinearLayout>


    <View
        android:id="@+id/v_line"
        style="@style/line" />
</LinearLayout>