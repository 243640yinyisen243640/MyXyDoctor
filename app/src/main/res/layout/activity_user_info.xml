<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/community_user_info_top"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <ImageView
                    android:id="@+id/iv_user_info_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_arrow_back_white_24dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/community_user_info_title"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_bg_white_5"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/iv_user_info_head"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/default_img_head" />

                        <LinearLayout
                            android:id="@+id/ll_user_info_healthy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_user_info_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/tv_user_info_sex_and_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:drawableLeft="@drawable/base_community_male"
                                    android:drawablePadding="5dp"
                                    android:textColor="@color/base_text_gray"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_user_info_disease_first"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_bg_white_black"
                                    android:padding="5dp"
                                    android:textColor="@color/community_disease_type"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_user_info_disease_second"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/shape_bg_white_black"
                                    android:padding="5dp"
                                    android:textColor="@color/community_disease_type"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    android:drawableRight="@drawable/base_arrow_right" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_user_info_device_manager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_bg_white_main_90"
                                android:paddingLeft="15dp"
                                android:paddingTop="8dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="8dp"
                                android:text="@string/user_info_device_manager"
                                android:textColor="#FF564F"
                                android:textSize="13sp" />


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/community_dotted_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_user_info_blood_sugar_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_bg_white_yellow_5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/user_info_blood_disease"
                                android:text="@string/user_info_blood_sugar"
                                android:textColor="#C27130" />

                            <TextView
                                android:id="@+id/tv_user_info_blood_sugar_text"
                                style="@style/user_info_blood_disease_num"
                                android:text="0/0" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_user_info_blood_pressure_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_bg_white_yellow_5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/user_info_blood_disease"
                                android:text="@string/user_info_blood_pressure_follow_up" />

                            <TextView
                                android:id="@+id/tv_user_info_blood_pressure_text"
                                style="@style/user_info_blood_disease_num"
                                android:text="0/0" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_user_info_blood_disease_follow_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_bg_white_yellow_5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/user_info_blood_disease"
                                android:text="@string/user_info_blood_sugar_follow_up"
                                android:textColor="#9B6739"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_user_info_blood_disease_follow_up"
                                style="@style/user_info_blood_disease_num"
                                android:text="0/0"
                                android:textColor="#9B6739" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_user_info_blood_pressure_follow_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_bg_white_yellow_5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/user_info_blood_disease"
                                android:text="@string/user_info_blood_pressure"
                                android:textColor="#9B6739"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_user_info_blood_pressure_follow_up"
                                style="@style/user_info_blood_disease_num"
                                android:text="0/0"
                                android:textColor="#9B6739" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_user_info_dead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/user_info_have_dead"
                    android:visibility="gone" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_bg_base_main_rectangle"
                android:drawablePadding="10dp"
                android:text="@string/user_info_healthy_record"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.xy.xydoctor.customerView.NoConflictGridView
                android:id="@+id/gv_user_info_health_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numColumns="4"
                android:paddingTop="@dimen/dp_10"
                android:verticalSpacing="@dimen/dp_10"
                android:visibility="visible" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_white_5"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shape_bg_base_main_rectangle"
                    android:drawablePadding="10dp"
                    android:text="@string/user_info_healthy_record_follow_up_management"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.xy.xydoctor.customerView.NoConflictGridView
                    android:id="@+id/gv_follow_up_management_health_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:numColumns="4"
                    android:paddingTop="@dimen/dp_10"
                    android:verticalSpacing="@dimen/dp_10"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_user_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dp_40"
                android:scaleType="centerCrop"
                android:src="@drawable/online_test_add"
                android:visibility="visible" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_user_info_user_medican"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_white_5"
                android:drawableLeft="@drawable/shape_bg_base_main_rectangle"
                android:drawablePadding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user_info_user_medican"
                android:drawableRight="@drawable/base_arrow_right"
                android:drawablePadding="5dp"
                android:text="@string/user_info_medicine_remind" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>