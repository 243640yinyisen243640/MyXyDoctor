<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/data_statistics_bg_top"
            android:gravity="right"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_statics_top_back"
                    style="@style/hh_wr_wr"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:padding="@dimen/dp_12"
                    android:src="@drawable/img_base_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/community_follow_up_statistics"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_fs_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_bg_main_white_90"
                android:drawableRight="@drawable/base_arrow_down_white"
                android:drawablePadding="40dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">


            <TextView
                android:id="@+id/tv_fs_building_all_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/community_statics_person_num"
                android:textColor="#FF564F"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_fs_building_follow_all_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/community_statics_all_num"
                android:textColor="#FF854F"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_fs_building_follow_current_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/community_statics_current_num"
                android:textColor="#3D98DF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_fs_follow_all_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/community_statics_all_times"
                android:textColor="#9D9D9D"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tv_fs_follow_finish_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:text="@string/community_statics_finish_times"
                android:textColor="#9D9D9D"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tv_fs_follow_no_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/community_statics_no_times"
                android:textColor="#9D9D9D"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tv_fs_follow_lost_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/community_statics_lost_times"
                android:textColor="#9D9D9D"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_bg_white_5"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血糖数据统计"
                        android:textColor="@color/base_black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_fs_follow_patient_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:drawableLeft="@drawable/shape_bg_main_2"
                        android:drawablePadding="10dp"
                        android:text="@string/community_statics_patient_num"
                        android:textColor="@color/community_home_index_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_fs_follow_year_finish_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/shape_bg_blue_2"
                        android:drawablePadding="10dp"
                        android:text="@string/community_statics_year_finish_num"
                        android:textColor="@color/community_home_index_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_fs_follow_year_lost_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/shape_bg_green_2"
                        android:drawablePadding="10dp"
                        android:text="@string/community_statics_year_lost_num"
                        android:textColor="@color/community_home_index_gray"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:visibility="visible">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <com.xy.xydoctor.customerView.CirclePercentView
                            android:id="@+id/fs_circle_percent_progress1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            app:circleBgColor="@color/community_statics_gray"
                            app:circleIsGradient="false"
                            app:circleProgressColor="@color/community_statics_red" />

                        <com.xy.xydoctor.customerView.CirclePercentView
                            android:id="@+id/fs_circle_percent_progress2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            app:circleBgColor="@color/community_statics_gray"
                            app:circleIsGradient="false"
                            app:circleProgressColor="@color/community_statics_blue" />

                        <com.xy.xydoctor.customerView.CirclePercentView
                            android:id="@+id/fs_circle_percent_progress3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:circleBgColor="@color/community_statics_gray"
                            app:circleIsGradient="false"
                            app:circleProgressColor="@color/community_statics_green" />

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_bg_white_5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <com.lyd.baselib.widget.view.MyListView
                android:id="@+id/rv_fs_follow_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:focusable="false" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>