<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/base_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_5"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_medicine_name"
            android:textColor="@color/base_black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_add_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/please_add_medicine_name"
            android:paddingTop="15dp"
            android:textColor="@color/data_gray_light"
            android:textSize="13sp" />

        <View
            style="@style/line"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/add_medicine_all_amount"
            android:textColor="@color/base_black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_add_medicine_all_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_add_medicine_all_amount"
                android:paddingTop="15dp"
                android:textColor="@color/data_gray_light"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_add_medicine_choose_amount"
                style="@style/community_add_medicine_choose"
                android:text="mg" />


        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/add_medicine_smoke_times"
            android:textColor="@color/base_black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_add_medicine_smoke_times"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_add_medicine_smoke_times"
                android:paddingTop="15dp"
                android:textColor="@color/data_gray_light"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/次"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_add_medicine_smoke_times"
                style="@style/community_add_medicine_choose"
                android:layout_marginLeft="4dp"
                android:text="日" />


        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/add_medicine_dose"
            android:textColor="@color/base_black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_add_medicine_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_add_medicine_dose"
                android:paddingTop="15dp"
                android:textColor="@color/data_gray_light"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/次"
                android:textColor="#333333"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/add_medicine_name"
                android:textColor="@color/base_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_add_medicine_choose"
                style="@style/user_add_right_choose"
                android:text="@string/please_choose" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>