<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_building_unit_location_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/community_location"
            android:drawablePadding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/base_text_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_building_unit_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/base_black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/iv_building_unit_party_member_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/community_party_member" />

                <ImageView
                    android:id="@+id/iv_building_unit_handicapped_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/community_handicapped" />

                <ImageView
                    android:id="@+id/iv_building_unit_mental_illness_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/community_mental_illness" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_building_unit_follow_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/community_impotant_follow"
                    android:drawablePadding="5dp"
                    android:text="@string/app_name" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_building_unit_sex_item"
                style="@style/follow_up_search_infomation"
                android:text="@string/app_name" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tv_building_unit_age_item"
                style="@style/follow_up_search_infomation"
                android:text="@string/app_name" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tv_building_unit_phone_item"
                style="@style/follow_up_search_infomation"
                android:text="@string/app_name" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_building_unit_sugar_item"
                style="@style/follow_up_change_disease_type"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_building_unit_pressure_item"
                style="@style/follow_up_change_disease_type"
                android:layout_marginLeft="5dp"
                android:text="@string/app_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_building_unit_sugar_follow_item"
                style="@style/follow_up_change_sugar_pressure"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/follow_up_chage_sugar"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_building_unit_pressure_follow_item"
                style="@style/follow_up_change_sugar_pressure"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/follow_up_chage_pressure"
                android:text="@string/app_name" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_building_unit_wait_follow_item"
                style="@style/user_community_member_wait_follow"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:text="@string/community_wait_follow_up" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/shape_dotted_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_building_unit_time_and_sugar_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/data_gray_light"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_building_unit_unit_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/sugar_or_pressure_low"
                android:text="@string/app_name"
                android:textColor="@color/base_text_gray"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_building_unit_time_and_pressure_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/sugar_or_pressure_low"
            android:text="@string/app_name"
            android:textColor="@color/base_text_gray"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>