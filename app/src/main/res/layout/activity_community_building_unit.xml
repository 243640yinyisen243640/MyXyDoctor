<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_building_unit_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_building_unit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/community_location"
                android:drawablePadding="5dp"
                android:textColor="@color/base_text_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_building_unit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_black"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ml_family_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_building_unit_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/community_impotant_follow"
                    android:drawablePadding="5dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_building_unit_relation"
                    style="@style/follow_up_search_infomation"
                    android:text="户主" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/tv_building_unit_sex"
                    style="@style/follow_up_search_infomation" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/tv_building_unit_age"
                    style="@style/follow_up_search_infomation" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_building_unit_sugar"
                    style="@style/follow_up_change_disease_type" />

                <TextView
                    android:id="@+id/tv_building_unit_pressure"
                    style="@style/follow_up_change_disease_type"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_building_unit_sugar_follow"
                    style="@style/follow_up_change_sugar_pressure"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/follow_up_chage_sugar" />

                <TextView
                    android:id="@+id/tv_building_unit_pressure_follow"
                    style="@style/follow_up_change_sugar_pressure"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@drawable/follow_up_chage_pressure" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_building_unit_wait_follow"
                    style="@style/user_community_member_wait_follow"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="@string/community_wait_follow_up" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/community_dotted_line" />

            <LinearLayout
                android:id="@+id/ll_building_unit_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_building_unit_time_and_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/data_gray_light"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_building_unit_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/sugar_or_pressure_low"
                    android:drawablePadding="5dp"
                    android:textColor="@color/base_text_gray"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_building_unit_time_and_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableRight="@drawable/sugar_or_pressure_low"
                android:textColor="@color/base_text_gray"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="家庭成员"
                android:textColor="@color/base_text_gray"
                android:textSize="13sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_building_unit_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>