<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_um_name_and_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/community_location"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="@string/app_name" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_user_medicine"
        style="@style/hh_fi_fi"
        android:visibility="visible">

        <ListView
            android:id="@+id/lv_user_medicine"
            style="@style/listView">

        </ListView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <include layout="@layout/include_default_no_data" />


</LinearLayout>