<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_black_14_w_w" />


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_value"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/bp_value_low" />

            <TextView
                style="@style/text_gray_12_w_w"
                android:text="mmHg" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <LinearLayout
            android:id="@+id/ll_type_right"
            style="@style/hh_wr_wr"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_bp_auto_upload" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/text_gray_14_w_w"
                android:gravity="right"
                android:text="手动上传"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <View style="@style/line" />

</LinearLayout>