<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/line"
        android:layout_marginTop="10dp"
        android:background="@color/gray_light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_child_datei_dead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/user_info_have_dead" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_child_datei_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_child_datei_sex"
                    style="@style/follow_up_search_infomation"
                    android:layout_marginLeft="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/tv_user_child_datei_age"
                    style="@style/follow_up_search_infomation" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/tv_user_child_datei_phone"
                    style="@style/follow_up_search_infomation" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_child_datei_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/user_datei_location"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/community_content_black"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_user_child_datei_record_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/user_datei_contacts"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/community_content_black"
                android:textSize="13sp" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>