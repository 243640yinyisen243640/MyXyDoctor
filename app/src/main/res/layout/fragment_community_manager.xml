<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollView"
    android:background="@color/base_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/community_manager_top_bg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/community_manager_title"
                    android:textColor="@color/white"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/tv_community_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/filter"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/base_filter"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </FrameLayout>

            <TextView
                android:id="@+id/tv_community_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_bg_white_5"
                android:drawableLeft="@drawable/community_search"
                android:drawablePadding="5dp"
                android:padding="12dp"
                android:text="@string/community_search_content"
                android:textColor="#9D9D9D">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_community_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/community_location"
                    android:drawablePadding="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_community_add_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_main_90"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="5dp"
                    android:text="@string/community_add_user"
                    android:textColor="@color/white" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray_light" />

            <LinearLayout
                android:id="@+id/ll_community_filter_building_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/community_num"
                    android:textColor="#4A4A4A" />

                <TextView
                    android:id="@+id/tv_community_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/base_arrow_right"
                    android:drawablePadding="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/main_red"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_community_building_num"
                style="@style/community_building_num"
                android:drawableLeft="@drawable/community_building_num"
                android:text="@string/app_name" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/tv_community_person_num"
                style="@style/community_building_num"
                android:drawableLeft="@drawable/community_person_num"
                android:text="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/community_wait_first"
                android:text="@string/community_wait_things_first" />

            <TextView
                style="@style/community_wait_second"
                android:text="@string/community_wait_things_second" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_community_follow_up_to_be_done"
                style="@style/community_wait_thind_num"
                android:text="@string/follow_up_agent_title" />

            <TextView
                android:id="@+id/tv_community_abnormal_data"
                style="@style/community_wait_thind_num"
                android:text="@string/community_data_abnormal_title" />

            <TextView
                android:id="@+id/tv_community_medication_reminder"
                style="@style/community_wait_thind_num"
                android:text="@string/user_info_medicine_remind" />
        </LinearLayout>


        <TextView
            style="@style/community_wait_first"
            android:text="@string/community_wait_things_statistics" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_community_follow_up_statistics"
                style="@style/community_follow_up"
                android:drawableTop="@drawable/follow_up_statistics"
                android:text="@string/community_follow_up_statistics" />

            <TextView
                android:id="@+id/tv_community_num_statistics"
                style="@style/community_follow_up"
                android:drawableTop="@drawable/num_statistics"
                android:text="@string/community_statistics" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>