<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_use_medicine_child_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/base_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_use_medicine_child_last_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_main_gradient_90_0_90_0"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_use_medicine_child_times_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/data_gray_light"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_use_medicine_child_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/data_gray_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_use_medicine_child_have"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/data_gray_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_use_medicine_child_last"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/data_gray_light"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tv_use_medicine_child_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/app_name"
        android:textColor="@color/data_gray_light"
        android:textSize="13sp" />

    <View
        style="@style/line"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tv_use_medicine_child_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/app_name"
        android:textColor="@color/data_gray_light"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_use_medicine_child_edit"
            style="@style/user_medicine_tip"
            android:text="@string/user_medicine_edit_seheme" />

        <TextView
            android:id="@+id/tv_use_medicine_child_finish"
            style="@style/user_medicine_tip"
            android:layout_marginLeft="10dp"
            android:text="@string/user_medicine_edit_seheme" />

        <TextView
            android:id="@+id/tv_use_medicine_child_remind_user"
            style="@style/user_medicine_tip"
            android:layout_marginLeft="10dp"
            android:text="@string/user_medicine_edit_seheme" />

    </LinearLayout>

</LinearLayout>