<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/iv_follow_search_img_top_back"
        style="@style/hh_wr_wr"
        android:layout_gravity="left"
        android:padding="@dimen/dp_12"
        android:src="@drawable/img_base_back_red" />


    <EditText
        android:id="@+id/et_follow_up_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_bg_background_5"
        android:drawableLeft="@drawable/base_community_search"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingRight="15dp"
        android:textSize="13sp"
        android:paddingBottom="13dp"
        android:hint="@string/please_input_building_name_to_search" />

    <TextView
        android:id="@+id/tv_follow_up_search_sure"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/main_red"
        android:text="@string/rc_ext_search"
        android:layout_gravity="right" />


</LinearLayout>